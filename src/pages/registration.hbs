---
title: Зарегистрироваться
nameForm: Авторизоваться
labelTextId: Введите ваш ID
labelTextPass: Введите пароль
linkTextSing: Зарегистрироваться
stylesheets:
- ../sass/auth.scss
scripts:
- ../modules/auth/auth.js
---
{{#extend "baseLayout"}}
    {{#content "main"}}
        <div class="auth">
            <div class="form-auth__box">
                <form method="post" action="#" novalidate>
                    <div class="form-auth__title">{{title}}</div>
                    <div class="form-auth__box-input">
                        <div class="form-auth__row">
                            <div class="form-auth__cell">
                                <input class="custom-input form-auth__input"
                                       id="first_name"
                                       type="text"
                                       name="first_name"
                                       autocomplete="off"
                                       aria-invalid="true"
                                       placeholder="Имя">
                            </div>
                        </div>
                        <div class="form-auth__row">
                            <div class="form-auth__cell">
                                <input class="custom-input form-auth__input"
                                       id="second_name"
                                       type="text"
                                       name="second_name"
                                       autocomplete="off"
                                       aria-invalid="true"
                                       placeholder="Отчество">
                            </div>
                        </div>
                        <div class="form-auth__row">
                            <div class="form-auth__cell">
                                <input class="custom-input form-auth__input"
                                       id="login"
                                       type="text"
                                       name="login"
                                       autocomplete="off"
                                       aria-invalid="true"
                                       placeholder="Придумайте логин">
                            </div>
                        </div>
                        <div class="form-auth__row">
                            <div class="form-auth__cell">
                                <input class="custom-input form-auth__input"
                                       id="email"
                                       type="text"
                                       name="email"
                                       autocomplete="off"
                                       aria-invalid="true"
                                       placeholder="Email">
                            </div>
                        </div>
                        <div class="form-auth__row">
                            <div class="form-auth__cell">
                                <input class="custom-input form-auth__input"
                                       id="password"
                                       type="password"
                                       name="password"
                                       autocomplete="off"
                                       aria-invalid="true"
                                       placeholder="Придумайте пароль">
                            </div>
                        </div>
                        <div class="form-auth__row">
                            <div class="form-auth__cell">
                                <input class="custom-input form-auth__input"
                                       id="phone"
                                       type="text"
                                       name="phone"
                                       autocomplete="off"
                                       aria-invalid="true"
                                       placeholder="Номер мобильного телефона">
                            </div>
                        </div>
                    </div>
                    <div class="form-auth__box-button-action">
                        <button type="submit"
                                class="custom-button button_width_max button_color_blue form-auth__button-action">
                            {{title}}
                        </button>
                    </div>
                </form>
            </div>
        </div>
    {{/content}}
{{/extend}}
